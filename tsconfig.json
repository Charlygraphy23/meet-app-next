{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./"
	},
	"exclude": [
		".git",
		".app-cache",
		".npm",
		".npm-tmp",
		"dist",
		"dist*",
		"node_modules",
		"subfolder/dist",
		"subfolder/node_modules",
		"**/dist/*",
		"**/node_modules/*"
	],
	"include": ["./"]
}
